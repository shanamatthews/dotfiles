#!/usr/bin/env bash

declare -A emoji

emoji[smile]=ðŸ˜ƒ
emoji[star]=ðŸ’«
emoji[fox]=ðŸ¦Š
emoji[frog]=ðŸ¸
emoji[grapes]=ðŸ‡

toemoji () {
  local in=/dev/stdin
  local out=/dev/stdout
  local file="$1"

  if [[ -n $file ]]; then
    in="$file"
    out="$(mktemp)"
  fi
  
  IFS=$'\n'

  while read -r line; do # ignore escapes
    for k in ${!emoji[@]}; do
      line=${line//:$k:/${emoji[$k]}}
    done
    echo "$line" >> $out
  done < "$in"

  if [[ -n $file ]]; then
    cp "$out" "$file"
    rm "$out"
  fi

}

toemoji "$@"
